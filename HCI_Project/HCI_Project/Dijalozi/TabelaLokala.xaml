<Window x:Class="HCI_Project.Dijalozi.TabelaLokala"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TabelaLokala" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Loaded="Window_Loaded" Height="594" Width="679">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dgrMain" ItemsSource="{Binding Path=Lokali}" IsReadOnly="True"/>
        <Grid Grid.Column="0" Grid.Row="1" DataContext="{Binding ElementName=dgrMain,Path=SelectedItem}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style TargetType="TextBlock" x:Key="FamilyAndSize">
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Margin" Value="5 5 5 5"/>
                </Style>
            </Grid.Resources>

            <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource FamilyAndSize}">Oznaka:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource FamilyAndSize}">Naziv:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource FamilyAndSize}">Opis:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource FamilyAndSize}">Tip:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="4" Style="{StaticResource FamilyAndSize}">Alkohol:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="5" Style="{StaticResource FamilyAndSize}">Za hendik.:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="6" Style="{StaticResource FamilyAndSize}">Pusenje:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="7" Style="{StaticResource FamilyAndSize}">Rezervacije:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="8" Style="{StaticResource FamilyAndSize}">Cene:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="9" Style="{StaticResource FamilyAndSize}">Kapacitet:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="10" Style="{StaticResource FamilyAndSize}">Datum otvaranja:</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="11" Style="{StaticResource FamilyAndSize}">Ikonica:</TextBlock>

            <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Path=oznaka}" Margin="5 5 10 5"></TextBox>
            <TextBox Grid.Column="1" Grid.Row="1" Margin="5 5 10 5"></TextBox>
            <TextBox Grid.Column="1" Grid.Row="2" Margin="5 5 10 5"></TextBox>
            <ComboBox Grid.Column="1" Grid.Row="3" Margin="5 5 10 5"></ComboBox>
            <ComboBox Grid.Column="1" Grid.Row="4" Margin="5 5 10 5"></ComboBox>
            <StackPanel Grid.Column="1" Grid.Row="5" Orientation="Horizontal" Margin="5 5 10 5">
                <RadioButton GroupName="hendikep" FontFamily="Arial" FontSize="13">Da</RadioButton>
                <RadioButton GroupName="hendikep" Margin="10 0 0 0" FontFamily="Arial" FontSize="13">Ne</RadioButton>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="6" Orientation="Horizontal" Margin="5 5 10 5">
                <RadioButton GroupName="pusenje" FontFamily="Arial" FontSize="13">Da</RadioButton>
                <RadioButton GroupName="pusenje" Margin="10 0 0 0" FontFamily="Arial" FontSize="13">Ne</RadioButton>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="7" Orientation="Horizontal" Margin="5 5 10 5">
                <RadioButton GroupName="rezervacije" FontFamily="Arial" FontSize="13">Da</RadioButton>
                <RadioButton GroupName="rezervacije" Margin="10 0 0 0" FontFamily="Arial" FontSize="13">Ne</RadioButton>
            </StackPanel>
            <ComboBox Grid.Column="1" Grid.Row="8" Margin="5 5 10 5"></ComboBox>
            <TextBox Grid.Column="1" Grid.Row="9" Margin="5 5 10 5"></TextBox>
            <TextBox Grid.Column="1" Grid.Row="10" Margin="5 5 10 5"></TextBox>
            <Button Grid.Column="1" Grid.Row="11" Width="Auto" Margin="5 5 10 5" FontFamily="Arial" FontSize="13">Izaberi ikonicu</Button>
        </Grid>
    </Grid>
</Window>
