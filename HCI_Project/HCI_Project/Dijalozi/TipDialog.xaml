<Window x:Class="HCI_Project.Dijalozi.TipDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Unos novog tipa lokala" Height="321" Width="344">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.Resources>
            <Style TargetType="TextBlock" x:Key="FontStyleAndSize">
                <Setter Property="FontFamily" Value="Arial"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="5,5,10,5"/>
            </Style>
        </Grid.Resources>






        <TextBlock Style="{StaticResource FontStyleAndSize}">Oznaka:</TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource FontStyleAndSize}">Naziv:</TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource FontStyleAndSize}">Opis:</TextBlock>

        <TextBox Grid.Column="1" Margin="5 5 10 5"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="5 5 10 5"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="5 5 10 5"></TextBox>
        
        <StackPanel Grid.Column="1" Grid.Row="4"  Margin="5,0,10,5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="0 0 5 0" FontFamily="Arial" FontSize="13" Padding="5">Potvrdi</Button>
            <Button FontFamily="Arial" FontSize="13" Padding="5">Odustani</Button>
        </StackPanel>
    </Grid>
</Window>
